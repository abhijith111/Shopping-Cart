<section>
    <div class="container">
        {{#if totalAmount}}

        <div class="card">
            <h2 class="mr-auto ml-auto mt-5">Order Summary</h3>
                <div class="ml-5 mr-5 mb-5">
                    <form id="checkout__form">

                        <h4 class="mt-5">Total amount: <span class="text-success">{{totalAmount}}</span> </h4>
                        <h4 class="mt-3">Choose Payment Method</h4>
                        <input type="radio" value="cod" name="payMode" id="payMode">
                        <label class="form-check-label" for="paySelect">
                            Cash On Delivery
                        </label>
                        <br>
                        <input type="radio" value="online" name="payMode" id="payMode">
                        <label class="form-check-label" for="paySelect">
                            Pay Online
                        </label><br>
                        <label>Address </label>
                        <input type="text" class="form-control" id="address" name="address" placeholder="Enter address">
                        <label>Pincode</label>
                        <input type="number" name="pincode" class="form-control" id="pincode"
                            placeholder="Enter pincode">
                        <label for="phno">Contact Number</label>
                        <input type="number" class="form-control" name="phno" id="phno"
                            placeholder="Enter contact number">
                        <input type="text" name="userId" value="{{user._id}}" hidden>
                        <button type="submit" class="btn btn-success mt-4">
                            Place Order
                        </button>
                    </form>
                </div>
        </div>

        {{else}}

        <section>
            <div class="container pt-5">
                <div>
                    <h2 class="text-center">No Orders!</h2>
                </div>
                <div class="text-center pt-3">
                    <button class="btn btn-primary">Shop Now</button>
                </div>
            </div>
        </section>

        {{/if}}
    </div>

</section>