<section class="container mt-5">
    <table class="table table-borderless">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Image</th>
                <th scope="col" >Quandity</th>
            </tr>
        </thead>
        <tbody>
            {{#each productsInCart}}
            <tr>
                <th scope="row">{{inc @key}}</th>
                {{#each products}}
                <td>{{this.product__name}}</td>
                <td><img height="auto" width="60px" src="/images/product-images/{{this._id}}.jpg" alt=""></td>
                {{/each}}
                <td>


                    <button  class="btn btn-primary"
                        onclick="changeProductCount('{{this.productId}}','{{this.userId}}',-1)">-</button>

                    <span  class="text-center" id="{{this.productId}}">{{this.count}}</span>

                    <button  class="btn btn-primary"
                        onclick="changeProductCount('{{this.productId}}','{{this.userId}}',1)">+</button>


                </td>
                <td>
                    <button class="btn btn-danger" onclick="removeProduct('{{this.productId}}','{{this.userId}}')">
                        Remove
                    </button>
                    {{!-- <a class="btn btn-danger" style="color: white;">Remove</a></td> --}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>